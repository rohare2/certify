%define Name certify-nfs-netapp
%define Version (version)
%define Release (release)
%define Source (source)

Name: %{Name}
Version: %{Version}
Release: %{Release}
Source: %{Source}
License: GPLv2
Group: Applications/System
BuildArch: noarch
URL: https://www.ohares.us/
Distribution: RedHat/Centos 6
Vendor: Rich O'Hare
Packager: Rich O'Hare <rohare2@gmail.com>
Provides: netapp_diskscan.sh netapp_report.sh
Requires: mysql >= 5.0
Summary: Certify disk scanning tool for NetApp storage units
%define _unpackaged_files_terminate_build 0

%description
Disk scanning tool that works with Certify application to detect and
track disk drives on NetApp storage appliances. A disk inventory report is
sent to /var/log/messages.

Peristent data is stored in a mysql database available from certify-db rpm.

%prep
%setup -q -n %{Name}

%build
exit 0

%install
#rm -rf %RPM_BUILD_ROOT/*
make install
exit 0

%clean
#rm -fR %RPM_BUILD_ROOT/*
exit 0

%files
%defattr(-,root, root)
%config %attr(764, root, wheel) /etc/cron.daily/netapp_diskscan.cron
%attr(740, root, root) /usr/local/sbin/netapp_diskscan.sh
%attr(644, root, root) /usr/share/doc/%{Name}-%{Version}/readme

#!/bin/sh
# $Id$
# $Date$

# Disk scans are normally performed on every host
# Change enableDiskScan to 0 to disable diskscan
enableDiskScan=1

if [[ $enableDiskScan -eq 1 ]]; then
	/usr/local/sbin/diskscan.sh
fi

# Normally a disk check will only be performed on one machine,
# usually the database server
# Change enableDiskCheck to 1 to enable diskcheck
enableDiskCheck=0

if [[ $enableDiskCheck -eq 1 ]]; then
	/usr/local/sbin/diskcheck.sh
fi
